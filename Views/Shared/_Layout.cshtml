<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DayCare App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script defer src="~/lib/fontawesome/js/all.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm fixed-top bg-dark navbar-dark box-shadow">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Daycare App</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Teachers" asp-action="Index">Teachers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="GetHelp">Get Help</a>
                    </li>

                </ul>
            </div>
        </nav>
    </header>

    <main role="main" class="pt-5 pb-5 ml-2">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            &copy; 2020 - DayCare App - <a asp-area="" asp-controller="Home" asp-action="GetHelp">Get Help</a>
            &nbsp; By Chaoyi Yuan,Tong Du and Fan Ji
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
